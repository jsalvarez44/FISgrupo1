EJERCICIO: Construir una funcion recursiva para trazar una circunferencia conocido su centro y radio unicamente con pixeles

#include <winbgim.h>
#include <windows.h>
#include <math.h>

void circulo(int,int,int,int);

main()
{
	int x,y,r,a;
	
	x=200;
	y=200;
	r=100;
	a=0;
	
	initwindow(600,600);
	cleardevice();
	
	circulo(x,y,r,a);
	
	system("PAUSE");
	closegraph();
}

void circulo (int x, int y,int r, int a)
{
	if(a==360) return;
	
	int xc=r*cos(a);
	int yc=r*sin(a);
	putpixel(x+xc,y+yc,14);
	circulo(x,y,r,a+1);
}
#include<winbgim.h>
#include<math.h>
void circ_mio(int,int,int,int);


main()
{
	
	int x,y,radio,color,i;
	x=400;
	y=200;
	radio=100;
	i=0;
	initwindow(800,600);
	circ_mio(x,y,radio,i);
	system("PAUSE");
	closegraph();
}
void circ_mio (int x,int y,int r,int i)

{
	int xf,yf;
	if(i==360) return;
	{
		yf=sin(i)*r;
		xf=cos(i)*r;
		putpixel(x+xf,y+yf,3);
		circ_mio(x,y,r,i+1);
	}
} 

//Ejercico de recursividad(sacar factorial)
#include<stdio.h>
int fact(int);

main()
{
	int n,res;
	printf("Deme un numero :  ");
	scanf("%d",&n);
	res=fact(n);
	printf("\n factorial de %d es %d ",n,res);
}
//construimos el factorial recursivo 
int fact(int n)


{
	//empezamos verificandfo la condicion no recuersiva 
	if(n==0)return 1;
	else
	return(n*fact(n-1));//aplica formuial recursiva
}
