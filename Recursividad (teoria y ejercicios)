{
	int n,res;
	printf("Deme un numero :  ");
	scanf("%d",&n);
	hola (n);
	
}
int fact(int n)
{
	//empezamos verificandfo la condicion no recuersiva 
	if(n==0)return 1;
	else
	return(n*fact(n-1));//construimos el factorial recursivo
	
} 
void hola(int n)

{
	//empezamos verificandfo la condicion no recuersiva 
	if(n==0) return;
	else
	{
		printf("\n HOLA ");
		hola(n-1);
	}

}

