/*las uniones son estruturas quer se gestionan igual a la struct la diferencia adica en la representacon 
interna pra la union 
union algo {
int a;
char b;    };
main()
{
	algo a1,a2;
	a1.a=10;
	a2.b='z';
}
las enimeraciones permiten enmascarar datos enteros 
enum equipo_fut{
	liga,
	emelec,
	barca,
	nacho,
};
main()
{
	equipo_fut e1,e2;
	e1=liga;
	e2=emelec;
	printf("e1 vale %d",e1);

}
